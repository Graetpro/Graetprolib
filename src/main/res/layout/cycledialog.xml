<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/cycledialogstyle"
    android:paddingLeft="10dp">

    <ProgressBar
        android:layout_height="64dp"
        android:layout_width="64dp"
        android:indeterminateDrawable="@drawable/indeterminate_drawable"
        android:indeterminateDuration="1800"
        android:id="@+id/loadingProgressBar1"/>

    <TextView
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/loadingTextView1"
        android:layout_marginRight="15dp"
        android:textColor="@color/fonttransparent"/>

</LinearLayout>

